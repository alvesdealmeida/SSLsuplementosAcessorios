%h1 Listing produtos

%table
  %thead
    %tr
      %th Nome
      %th Categoria
      %th Descricao
      %th Valor
      %th
      %th
      %th

  %tbody
    - @produtos.each do |produto|
      %tr
        %td= produto.nome
        %td= produto.categoria
        %td= produto.descricao
        %td= produto.valor
        %td= link_to 'Show', produto
        %td= link_to 'Edit', edit_produto_path(produto)
        %td= link_to 'Destroy', produto, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Novo Produto', new_produto_path
