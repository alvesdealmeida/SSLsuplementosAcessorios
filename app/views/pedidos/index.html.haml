%h1 PEDIDOS

%table
  %thead
    %tr
      %th Cliente
      %th Produto
      %th Quantidade
      %th Valorunitario
      %th Valor
      %th Total
      %th
      %th
      %th

  %tbody
    - @pedidos.each do |pedido|
      %tr
        %td= pedido.Cliente.nome
        %td= pedido.Produto.nome
        %td= pedido.quantidade
        %td= pedido.valorunitario
        %td= pedido.valor
        %td= pedido.total
        %td= link_to 'Mostrar', pedido
        %td= link_to 'Editar', edit_pedido_path(pedido)
        %td= link_to 'Excluir', pedido, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Novo Pedido', new_pedido_path
